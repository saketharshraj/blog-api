{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            2,
            {
                "printWidth": 120,
                "singleQuote": true,
                "trailingComma": "all",
                "endOfLine": "lf"
            }
        ],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-console": 2,
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-empty-interface": "off"
    }
}
